{% extends 'base.html.twig' %}

{% block body %}
<h1>New Patient Referral</h1>
	<form method="POST" action="{{ path('app_new_patient') }}">
		<div class="form-group">
			<label class="col-md-3">Title:</label>
			<input type="text" name="title" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">First Name:</label>
			<input type="text" name="first_name" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">Surname:</label>
			<input type="text" name="surname" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">Date of Birth:</label>
			<input type="date" name="dob" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">Email:</label>
			<input type="email" name="email" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">Mobile Phone:</label>
			<input type="tel" name="phone" class="form-input col-md-9 mg-b-5" required>
		</div>
		<div class="form-group">
			<label class="col-md-3">Address:</label>
			<input type="text" name="address" class="form-input col-md-9 mg-b-5" required>
		</div>
		<button type="submit" class="btn">Submit</button>
	</form>
{% endblock %}
